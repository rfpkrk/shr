<Page x:Class="ChemicalWarehouseWPF.Views.BatchesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Партии реагентов"
      Background="#F5F5F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Новая партия" Width="120" Height="35" Background="#2A6F97" Foreground="White" 
                    BorderThickness="0" Click="BtnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Редактировать" Width="120" Height="35" 
                    Background="#F0F3F5" Foreground="#2A6F97" BorderBrush="#2A6F97" BorderThickness="1"
                    Margin="10,0" IsEnabled="False" Click="BtnEdit_Click"/>
            <Button x:Name="btnDelete" Content="Списать" Width="100" Height="35" 
                    Background="#F0F3F5" Foreground="#2A6F97" BorderBrush="#2A6F97" BorderThickness="1"
                    IsEnabled="False" Click="BtnDelete_Click"/>
            <Button Content="Обновить" Width="100" Height="35" Background="#F0F3F5" Foreground="#2A6F97" 
                    BorderBrush="#2A6F97" BorderThickness="1" Margin="10,0,0,0" Click="BtnRefresh_Click"/>
            <TextBox x:Name="txtSearch" Width="200" Height="35" Margin="20,0,0,0" 
                     Padding="8" TextChanged="TxtSearch_TextChanged"
                     BorderBrush="#E0E0E0" BorderThickness="1" Background="White"/>
        </StackPanel>
        <DataGrid Grid.Row="1" x:Name="dgBatches" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionChanged="DgBatches_SelectionChanged" Background="White" 
                  BorderBrush="#E0E0E0" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Партия" Binding="{Binding BatchNumber}" Width="120"/>
                <DataGridTextColumn Header="Реагент" Binding="{Binding ReagentName}" Width="150"/>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding SupplierName}" Width="150"/>
                <DataGridTextColumn Header="Приход" Binding="{Binding ArrivalDate, StringFormat=dd.MM.yyyy}" Width="90"/>
                <DataGridTextColumn Header="Срок" Binding="{Binding ExpirationDate, StringFormat=dd.MM.yyyy}" Width="90"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding CurrentQuantity}" Width="70"/>
                <DataGridTextColumn Header="Ед." Binding="{Binding UnitSymbol}" Width="50"/>
                <DataGridTextColumn Header="Место" Binding="{Binding LocationCode}" Width="80"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="txtStatus" Grid.Row="1" Text="Готов" Foreground="#666" 
                   VerticalAlignment="Bottom" Margin="0,0,0,5"/>
    </Grid>
</Page>