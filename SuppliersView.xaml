<Page x:Class="ChemicalWarehouseWPF.Views.SuppliersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Поставщики"
      Background="#F5F5F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить" Width="100" Height="35" Background="#2A6F97" 
                    Foreground="White" BorderThickness="0" Click="BtnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Изменить" Width="100" Height="35" 
                    Background="#F0F3F5" Foreground="#2A6F97" BorderBrush="#2A6F97" BorderThickness="1"
                    Margin="10,0" IsEnabled="False" Click="BtnEdit_Click"/>
            <Button Content="Обновить" Width="100" Height="35" Background="#F0F3F5" Foreground="#2A6F97" 
                    BorderBrush="#2A6F97" BorderThickness="1" Margin="10,0,0,0" Click="BtnRefresh_Click"/>
            <TextBox x:Name="txtSearch" Width="200" Height="35" Margin="20,0,0,0" 
                     Padding="8" TextChanged="TxtSearch_TextChanged"
                     BorderBrush="#E0E0E0" BorderThickness="1" Background="White"/>
        </StackPanel>
        <DataGrid Grid.Row="1" x:Name="dgSuppliers" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionChanged="DgSuppliers_SelectionChanged"
                  Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Binding="{Binding SupplierName}" Width="150"/>
                <DataGridTextColumn Header="Контакт" Binding="{Binding ContactPerson}" Width="120"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="ИНН" Binding="{Binding INN}" Width="100"/>
                <DataGridTextColumn Header="КПП" Binding="{Binding KPP}" Width="80"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="200"/>
                <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="txtStatus" Grid.Row="2" Text="Готов" Foreground="#666"/>
        <TextBlock x:Name="txtCount" Grid.Row="2" Text="0" Foreground="#2A6F97" 
                   HorizontalAlignment="Right" Margin="0,0,50,0"/>
    </Grid>
</Page>